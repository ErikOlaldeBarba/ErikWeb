@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Carito Page</title>
    <link rel="stylesheet" href="~/Content/CarolinaMakeup.css" />
    @Styles.Render("~/Content/normalize.css")
    @Styles.Render("~/Content/bootstrap/bootstrap.min.css")
</head>
<body>
    <div class="cuerpo container-fluid">
        <div class="row">
            <div class="encabezado col">

                <nav>
                    <ul>
                        <a href=""><li>Home</li></a>
                        <a href=""><li>About me</li></a>
                        <a href=""><li>My work</li></a>
                    </ul>
                </nav>
            </div>
        </div>
        <div class="row">
            <div class="main-section col">
                <div>
                    <div id="projects" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#projects" data-slide-to="0" class="active"></li>
                            <li data-target="#projects" data-slide-to="1"></li>
                            <li data-target="#projects" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/img/makeup1.jpg" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/makeup2.jpg" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="~/img/makeup3.jpg" class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#projects" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#projects" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="second-section col">
                <div class="section-info">
                    <h2>ROSEF MAKEUP</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 col-md-4">
                <img src="~/img/Caro2.jpg" class="cuadro" />
            </div>
            <div class="col-sm-12 col-md-4">
                <img src="~/img/Caro1.jpg" class="cuadro" />
            </div>
            <div class="col-sm-12 col-md-4">
                <img src="~/img/Caro3.jpg" class="cuadro" />
            </div>
        </div>
        <div class="row">
            <div class="second-section col">
                <div class="hijo section-info">
                    <h2>CONTACT</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="forma col-md-6 col-sm-10">
                <div class="hijo">
                    <form method="POST" action="" class="form-group">
                        <p>Make your date with us!</p>
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" name="nombre" class="form-control" placeholder="Nombre..." />
                        </div>
                        <div class="form-group">
                            <label>email</label>
                            <input type="email" name="correo" class="form-control" placeholder="micorreo@gmail.com" />
                        </div>
                        <div class="form-group">
                            <label>phone</label>
                            <input type="text" name="numero" class="form-control" placeholder="66423...." />
                        </div>
                        <div class="form-group">
                            <label>Fecha</label>
                            <input type="date" name="fecha" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Make date" class="btn btn-primary btn-block mb-2" />
                        </div>
                        <hr />
                        <div class="hijo">
                            <img src="https://lh3.googleusercontent.com/bYtqbOcTYOlgc6gqZ2rwb8lptHuwlNE75zYJu6Bn076-hTmvd96HH-6v7S0YUAAJXoJN" width="30" height="30" />
                            <a href="https://wa.me/6642369794/?text=Hello" class="btn btn-success">Make your date in whatsApp</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        


    </div>
    <!-- scripts -->
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap.min.js"></script>
</body>
</html>
